<h1 class="text-center">New cocktail</h1>

<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <%= simple_form_for(@cocktail, html: { multipart: true }) do |f| %>
        <%= f.error_notification %>
        <%= f.input :name %>
        <%= f.input :picture %>
        <%= f.button :submit, value: "Add a cocktail!" %>
      <% end %>
    </div>
  </div>
</div>

